{
    "name": "@lumidion/parselt",
    "version": "1.0.0-RC3",
    "bin": {
        "parselt": "./bin/index.js"
    },
    "type": "module",
    "preferGlobal": true,
    "description": "This package checks and loads updates for translation files.",
    "exports": {
        ".": "./lib/index.js",
        "./package.json": "./package.json"
    },
    "engines": {
        "npm": ">=7.0.0",
        "node": ">=16.0.0"
    },
    "scripts": {
        "build": "tsc",
        "format": "eslint .",
        "format:fix": "eslint --fix .",
        "test": "NODE_OPTIONS=--experimental-vm-modules jest",
        "test:service": "NODE_OPTIONS=--experimental-vm-modules jest --watch test/services/*Service.spec",
        "clean": "node --loader ts-node/esm ./scripts/cleanNonTs.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/lumidion/parselt.git"
    },
    "keywords": [
        "international",
        "translation",
        "i18n"
    ],
    "author": "Lumidion",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/lumidion/parselt/issues"
    },
    "homepage": "https://github.com/lumidion/parselt#readme",
    "dependencies": {
        "ajv": "^8.11.0",
        "inquirer": "^9.1.4",
        "js-yaml": "^4.1.0",
        "lodash": "^4.17.21",
        "yargs": "^17.5.1"
    },
    "devDependencies": {
        "@types/inquirer": "^9.0.3",
        "@types/jest": "29.4.0",
        "@types/js-yaml": "^4.0.5",
        "@types/lodash": "^4.14.182",
        "@types/node": "^18.6.4",
        "@types/uuid": "^9.0.0",
        "@types/yargs": "^17.0.11",
        "@typescript-eslint/eslint-plugin": "^5.51.0",
        "@typescript-eslint/parser": "^5.32.0",
        "eslint": "^8.21.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-unused-imports": "^2.0.0",
        "jest": "29.4.2",
        "prettier": "^2.7.1",
        "ts-jest": "29.0.2",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.2",
        "uuid": "^9.0.0"
    }
}
